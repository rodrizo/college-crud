@model IEnumerable<CRUDColegio.Models.Profesor>

@{
    ViewData["Title"] = "Lista de profesores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if(TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" date-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">

        <div class="col-sm-6">
            <h3>Lista de profesores</h3>
        </div>

        <div class="col-sm-6">
            <a class="btn btn-success" d-block asp-action="Create" asp-controller="Profesor">Agregar nuevo profesor</a>
        </div>
    </div>

    <div class="row">
        
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table table-striped">
                <thead>
                    <td>@Html.DisplayNameFor(m => m.Id)</td>
                    <td>@Html.DisplayNameFor(m => m.Nombre)</td>
                    <td>@Html.DisplayNameFor(m => m.Apellidos)</td>
                    <td>@Html.DisplayNameFor(m => m.Genero)</td>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellidos</td>
                            <td>@item.Genero</td>
                            <td>
                                <a asp-controller="Profesor" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-controller="Profesor" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>


            </table>
        }
        else
        {
            <p>No hay registros</p>
        }

    </div>




</div>

